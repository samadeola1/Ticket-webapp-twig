{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>ticket-webapp-react-ts</title>

        {% block stylesheets %}
            {# This function loads the CSS file built by Encore #}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body class="min-h-screen flex flex-col bg-gray-50">
        
        {% include 'partials/_navbar.html.twig' %}

        <main class="flex-grow max-w-[1440px] w-full mx-auto p-6 pt-[80px]">
            {% block body %}{% endblock %}
        </main>

        {% include 'partials/_footer.html.twig' %}

        <div id="toast-container" class="fixed bottom-6 right-6 z-[100]"></div>

        {# Lucide Icons CDN #}
        <script src="https://unpkg.com/lucide@latest"></script>

        {% block javascripts %}
            {# This function loads the JS file built by Encore #}
            {{ encore_entry_script_tags('app') }}
            
            {# Keep the Lucide initialization script #}
            <script>
                document.addEventListener('DOMContentLoaded', () => {
                    lucide.createIcons();
                });
            </script>
        {% endblock %}
    </body>
</html>